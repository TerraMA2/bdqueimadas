<div class="left-content-box" id="layer-explorer-and-filter-box">
  <div class="form-horizontal">
    <div class="form-group bdqueimadas-form">
      <label for="continents" class="col-sm-3 control-label" style="padding-left: 0px; padding-right: 0px;">Continentes</label>
      <div class="col-sm-9">
        <select id="continents" name="continents" class="form-control">
          <option value="">Selecione o continente</option>
          <% continents.rows.forEach(function(continent, index) { %>
            <% if(continent.name === "Americas") { %>
              <option value="<%- continent.id %>">Am&eacute;ricas</option>
            <% } else if(continent.name === "Europe") { %>
              <option value="<%- continent.id %>">Europa</option>
            <% } else if(continent.name === "Africa") { %>
              <option value="<%- continent.id %>">&Aacute;frica</option>
            <% } else if(continent.name === "South_America") { %>
              <option value="<%- continent.id %>">Am&eacute;rica do Sul</option>
            <% } else { %>
              <option value="<%- continent.id %>"><%- continent.name %></option>
            <% } %>
          <% }) %>
        </select>
      </div>
    </div>
  </div>
  <div class="form-horizontal">
    <div class="form-group bdqueimadas-form">
      <label for="countries" class="col-sm-3 control-label" style="padding-left: 0px; padding-right: 0px;">Países</label>
      <div class="col-sm-9">
        <select multiple id="countries" name="countries" class="form-control"></select>
      </div>
    </div>
  </div>
  <div class="form-horizontal">
    <div class="form-group bdqueimadas-form">
      <label for="states" class="col-sm-3 control-label" style="padding-left: 0px; padding-right: 0px;">Estados</label>
      <div class="col-sm-9">
        <select multiple id="states" name="states" class="form-control"></select>
      </div>
    </div>
  </div>
  <div class="form-group bdqueimadas-form">
    <div style="float: left;">
      <label for="filter-date-from" style="float: left; margin-right: 10px; margin-top: 5px;">Início</label>
      <input type="text" style="max-width: 100px; float: left;" class="form-control date filter-date filter-date-from" id="filter-date-from" placeholder="De">
    </div>
    <div style="float: right;">
      <label for="filter-date-to" style="float: left; margin-right: 10px; margin-top: 5px;">Fim</label>
      <input type="text" style="max-width: 100px; float: left;" class="form-control date filter-date filter-date-to" id="filter-date-to" placeholder="Até">
    </div>
  </div>
  <div style="clear: both; height: 5px;"></div>
  <div class="form-horizontal">
    <div class="form-group bdqueimadas-form">
      <label for="filter-satellite" class="col-sm-6 control-label" style="text-align: left;">Focos dos Sat&eacute;lites</label>
      <div class="col-sm-6">
        <select multiple class="form-control" id="filter-satellite">
          <%
          var satelliteOptions = "";
          var referenceSatellite = "";
          var isSatelliteSelected = false;

          configurations.filterConfigurations.Satellites.forEach(function(satellite, index) {
            if(satellite.Current) {
              if(satellite.ReferenceCurrent) {
                referenceSatellite += "<option value=\"" + satellite.Name + "\"";

                if(satellite.Selected) {
                  referenceSatellite += " selected>";

                  if(!isSatelliteSelected) isSatelliteSelected = true;
                } else {
                  referenceSatellite += ">";
                }

                referenceSatellite += "Refer&ecirc;ncia</option>";
              } else {
                satelliteOptions += "<option value=\"" + satellite.Name + "\"";

                if(satellite.Selected) {
                  satelliteOptions += " selected>";

                  if(!isSatelliteSelected) isSatelliteSelected = true;
                } else {
                  satelliteOptions += ">";
                }

                satelliteOptions += satellite.Name + "</option>";
              }
            }
          })
          %>

          <option value="all"<%- (!isSatelliteSelected) ? " selected" : ""%>>TODOS</option>
          <%- referenceSatellite + satelliteOptions %>
        </select>
      </div>
    </div>
  </div>
  <button class="btn btn-primary" id="filter-button">Aplicar</button>
  <button class="btn btn-primary" id="initial-filter-button">Tela Inicial</button>
  <hr/>
  <h4 class="layer-explorer-and-filters-title">
    Camadas
    <%
      if(configurations.mapConfigurations.EnableAddAndRemoveLayers) {
        %> <i class="fa fa-fw fa-plus" id="add-layer"></i><%
      }
    %>
  </h4>
  <br/>
  <div id="terrama2-layerexplorer" style="max-height: 250px;overflow: auto;"></div>
</div>
